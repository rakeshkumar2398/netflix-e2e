pipeline {
    agent any

    environment {
        DOCKERHUB = "dockerhub"
        IMAGE = "rakesh2398/netflix"
        GIT_REPO = "netflix-e2e"
        GIT_USER = "rakeshkumar2398"
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/rakeshkumar2398/netflix-e2e.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'üîç Running SonarQube Code Analysis...'
                withSonarQubeEnv('sonar-server') {
                    sh """
                        $SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectKey=netflix \
                        -Dsonar.projectName=netflix \
                        -Dsonar.sources=./ \
                        -Dsonar.host.url=http://54.158.205.65:9000
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'cd Application && docker build -t rakesh2398/netflix:${BUILD_NUMBER} .'
            }
        }

        stage('Docker Image Scan') {
            steps {
                sh 'trivy image rakesh2398/netflix:${BUILD_NUMBER}'
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                withCredentials([string(credentialsId: 'dockerhub', variable: 'TOKEN')]) {
                    sh 'echo "${TOKEN}" | docker login -u rakesh2398 --password-stdin'
                }
                sh 'docker push rakesh2398/netflix:${BUILD_NUMBER}'
            }
        }

        stage('Update Kubernetes Deployment Manifest File') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {

                    sh '''
                        git config user.email "rakesh@gmail.com"
                        git config user.name "rakesh"

                        sed -i "s#image:.*#image: rakesh2398/netflix:${BUILD_NUMBER}#g" Ansible/k8s_deployment.yaml

                        git add .
                        git commit -m "Update deployment image tag to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git HEAD:main
                    '''
                }
            }
        }
    }
}
